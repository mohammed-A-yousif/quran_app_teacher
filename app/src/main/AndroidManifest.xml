<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quranappteacher">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Splash screen -->
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppThemeSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- login activity -->
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- control activity -->
        <activity
            android:name=".activity.DashboardActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- missions activity -->
        <activity
            android:name=".activity.TaskActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- students activity -->

        <!-- addingMission activity -->
        <activity
            android:name=".activity.AddingTask"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- review activity -->
        <activity
            android:name=".activity.ReviewActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- studentsReviews activity -->
        <activity
            android:name=".StudentsReviews"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- main activity -->
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!-- students activity -->
        <activity
            android:name=".activity.StudentsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- addingStudents activity -->
        <activity
            android:name=".AddingStudent"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activity.StudentsReviews"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />


    </application>

</manifest>