<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#557571"
    tools:context=".Login">


    <EditText
        android:id="@+id/phone_ET"
        android:layout_width="308dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_text"
        android:drawableStart="@drawable/phone__num_24"
        android:drawableLeft="@drawable/phone__num_24"
        android:drawablePadding="10dp"
        android:maxLength="10"
        android:maxLines="1"
        android:hint="     رقم الهاتف"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/pass_ET"
        android:layout_width="308dp"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_text"
        android:drawableStart="@drawable/pass_word_24"
        android:drawableLeft="@drawable/pass_word_24"
        android:drawablePadding="10dp"
        android:hint="     كلمة السر"
        android:lines="1"
        android:maxLength="10"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_ET" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="308dp"
        android:layout_height="53dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_button"
        android:text="@string/enter"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintCircleRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass_ET" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_splash" />


</androidx.constraintlayout.widget.ConstraintLayout>